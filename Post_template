<script>
window.onscroll = function() {myFunction()};

function myFunction() {
  if (document.documentElement.scrollTop > 950) {
    document.getElementById("main-menu").className = "sticky";
    document.getElementById("top").className = "sticky";
  } else {
    document.getElementById("main-menu").className = "main-menu ";
    document.getElementById("top").className = "main-menu ";
  }
}
</script>

